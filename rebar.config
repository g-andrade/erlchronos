% vim: set ft=erlang expandtab softtabstop=4 shiftwidth=4:
{erl_opts, [
        warn_export_all,
        warn_export_vars,
        warn_missing_spec,
        warn_obsolete_guard,
        warn_shadow_vars,
        warn_unused_import
        ]}.

{deps_dir, "deps"}.
{deps, [
        ]}.

{xref_checks, [
        undefined_function_calls,
        undefined_functions,
        locals_not_used,
        exports_not_used,
        deprecated_function_calls,
        deprecated_functions
        ]}.

{eunit_opts, [verbose, {skip_deps, true}]}.
{eunit_exclude_deps, true}.
{cover_enabled, true}.
